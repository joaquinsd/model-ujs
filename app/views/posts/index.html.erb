<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<%= render 'posts/form', post:@post %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="my_posts">
    <% @posts.each do |post| %>
      <tr>
        <%= render 'post', post: post %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
